<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"><!-- android:background="@drawable/title" -->
    <TextView 
    	android:text="NZ Road code quiz" 
    	android:id="@+id/textView1" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"
    	android:textSize="30sp"
		android:textColor="@color/White"
		android:textStyle="bold"
		android:paddingTop="25sp"
		android:paddingLeft="20sp"
		android:paddingRight="20sp">
	</TextView>
    <TextView 
    	android:text="Do you know the rules?" 
    	android:id="@+id/textView1" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"
    	android:textSize="28sp"
		android:textColor="@color/Yellow"
		android:textStyle="bold"
		android:paddingTop="30sp"
		android:paddingLeft="20sp"
		android:paddingRight="20sp">
	</TextView>
	<TextView 
    	android:text="Learn the New Zealand road code online for free and test your knowledge by answering the questions." 
    	android:id="@+id/textView1" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"
    	android:textSize="20sp"
		android:textColor="@color/White"
		android:textStyle="bold"
		android:paddingTop="20sp"
		android:paddingLeft="20sp">
	</TextView>
	<Button 
    	android:text="Start quiz"
    	android:textSize="18sp"
    	android:textStyle="bold"
    	android:background="@drawable/btn_yellow"
    	android:padding="10sp"
    	android:id="@+id/startButton" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"
    	android:onClick="begin"
    	android:layout_marginLeft="20sp"
    	android:layout_marginTop="20sp">
    </Button>  
</LinearLayout>